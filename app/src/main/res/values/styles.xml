<resources>

    <style name="DetailHeader">
        <item name="android:textSize">@dimen/detail_header_text_size</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/deep_blue</item>
    </style>

    <style name="DetailText">
        <item name="android:textSize">@dimen/detail_text_text_size</item>
        <item name="android:textColor">@color/deep_blue</item>
    </style>

    <style name="FullscreenLoading" parent="AppTheme">
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
