<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="windowNoTitle">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/eunry</item>
        <item name="colorSecondaryVariant">@color/eunry</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/colorPrimary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:colorBackground">@color/white</item>

        <item name="bottomNavigationBackground">@color/white</item>
        <item name="bottomNavigationItemTint">?attr/colorPrimary</item>
        <item name="bottomNavigationTextColor">?attr/colorPrimary</item>

        <item name="colorControlNormal">@color/white</item>

    </style>

</resources>