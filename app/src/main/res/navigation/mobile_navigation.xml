<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/mobile_navigation"
            app:startDestination="@id/destination_characters">

    <fragment android:id="@+id/destination_characters" android:name="com.example.rickandmorty.characters.CharactersFragmentRx"
              android:label="fragment_characters" tools:layout="@layout/fragment_characters">
        <action android:id="@+id/characters_to_character_detail"
                app:destination="@+id/destination_characters_details"/>
        <action android:id="@+id/action_destination_characters_to_episodesFragment"
                app:destination="@id/destination_episodes"/>
        <action android:id="@+id/action_destination_characters_to_favouriteFragment"
                app:destination="@id/destination_favourites"/>
    </fragment>
    <fragment android:id="@+id/destination_characters_details"
              android:name="com.example.rickandmorty.fragment.CharacterDetailsFragment"
              android:label="fragment_characters_detail"
              tools:layout="@layout/fragment_characters_detail">
        <argument android:name="character" app:argType="com.example.rickandmorty.data.characters.CharactersResults"/>
    </fragment>
    <fragment android:id="@+id/destination_episodes" android:name="com.example.rickandmorty.fragment.EpisodesFragment"
              android:label="fragment_episodes" tools:layout="@layout/fragment_episodes"/>
    <fragment android:id="@+id/destination_favourites" android:name="com.example.rickandmorty.fragment.FavouriteFragment"
              android:label="fragment_favourite" tools:layout="@layout/fragment_favourite">
        <action android:id="@+id/action_destination_favourites_to_destination_characters_details"
                app:destination="@id/destination_characters_details"/>
    </fragment>
</navigation>